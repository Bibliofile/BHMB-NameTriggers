{
  "compilerOptions": {
    "strict": true,
    "outDir": "dist",
    "target": "es2016",
    "lib": [
      "esnext",
      "dom",
      "scripthost"
    ],
    "module": "commonjs",
    "moduleResolution": "node",
    "declaration": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
